#include <stdio.h>

int main() {
    char op;
    float n1,n2;
    printf("digite uma equação simples no formato (numero operador numero)\n");
    scanf("%f %c %f", &n1,&op,&n2);
    switch(op){
        case '+': printf("%f",n1+n2);break;
        case '-': printf("%f",n1-n2); break;
        case '*': printf("%f",n1*n2); break;
        case '/':  
            if (n2!=0){
                printf("%f",n1/n2);
            }
            else{
                printf("Error zero division");
            }
                break;
    }

    
return 0;
}
