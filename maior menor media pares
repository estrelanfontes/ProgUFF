#include <stdio.h>

int main() {
    int v1,v2,v3, maior, menor;
    double media;
    
    printf("Digite 3 valores inteiros: *separe os valores com ':'*\n");
    scanf("%d:%d:%d",&v1,&v2,&v3);
    maior = v1;
    menor = v1;
    if ((v2>v1) && (v2>v3)) {    
    maior = v2;
    }
    if ((v3>v2) && (v3>v1)) {
    maior = v3;
    }

    media = (v1+v2+v3)/3;
    
    printf("O maior valor é: %d",maior);
    printf("\nO menor valor é: %d",menor);
    printf("\nMedia dos valores: %g",media);
    printf("\nValores pares: ");
    if (v1%2==0) 
    printf("\n%d",v1);
    if (v2%2==0)
    printf("\n%d",v2);
    if (v3%2==0)
    printf("\n%d",v3);
    
    return 0;
}
