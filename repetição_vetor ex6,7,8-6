#include <stdio.h>
#include <stdlib.h>

int* repetido(int*vetor, int tam, int*novotam){
    int i,j=0,cont=0;
    *novotam = 0;   
    int ja_contado[10] = {0};//array de inteiro,para boleanos
    
    //inserir os numeros repetidos no novo vetor temporario
    while (j < tam) {
        if (!ja_contado[vetor[j]]) {//verifica se o valor do vetor é falso (nao foi contado) lembrete: !=NOT entao NOT 0 == 1
            for (i = j + 1; i < tam; i++) {
                if (vetor[j] == vetor[i]) {//verifica se o valor nao contado possui repetiçao
                    (*novotam)++;
                    ja_contado[vetor[j]] = 1;//conta o valor, torna o indice dele true(1) no array ja_contado
                    break;
                }
            }
        }
        j++;
    }
    int* novovetor = (int*)malloc((*novotam)*sizeof(int));
    if (novovetor==NULL)exit(1);
    if (*novotam==0){
        printf("nao há repetiçoes");
        tam=0;
        free(novovetor);
        return NULL;

    }
    //inserindo os numeros repetidos no vetor correto
    cont = 0;
    j = 0;
    while (cont < (*novotam) && j < tam) {

        if (ja_contado[vetor[j]]) {
            novovetor[cont] = vetor[j];
            ja_contado[vetor[j]] = 0; 
            cont++;
        }
        j++;
    }
    return novovetor;


}

int main() {
int i,j,elemento,n=0,tam,bol=1;

printf("tamanho do vetor: ");
scanf("%d",&tam);

int*vetor = (int*)malloc(tam*sizeof(int));
if (vetor==NULL) exit(1);
for (i=0;i<tam;i++){
    printf("\nadicione um valor inteiro entre zero e nove: ");
    scanf("%d",&elemento);
    vetor[i]=elemento;
    
}


int*resposta = (int*)malloc(tam*sizeof(int));
if (resposta==NULL) exit(1);
resposta = repetido(vetor,tam,&n);


printf("Numeros repetidos: ");
for (i = 0; i < n; i++) {
    printf("%d ", resposta[i]);
}
free(vetor);
free(resposta);

    return 0;
}
