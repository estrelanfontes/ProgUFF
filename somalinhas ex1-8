#include <stdio.h>

void analisematriz(int *matriz, int linha, int coluna){
    int soma1 = 0, i=0, j=0;
    int soma2 = 0;
    int soma3 = 0;
    for (i=0; i<linha; i++){
    for (j=0; j<coluna; j++){
     switch (i){
         case 0: soma1 += matriz[i*coluna+j];break;
         case 1: soma2 += matriz[i*coluna+j];break;
         case 2: soma3 += matriz[i*coluna+j];break;
     }
    }    
    }
    if ((soma1 == soma2)&&(soma1 == soma3)){ printf("as somas sao iguais a %d", soma1);}
    else {
        printf("as somas das linhas tem valores distintos");
    }
    
}

int main(){
    int i, soma = 0, linha = 3, coluna = 2;
    int matriz[3][2] = {
        {0,1},
        {2,3},
        {4,5}
        };
    
    analisematriz((int*)matriz, linha, coluna);
    return 0;
}
